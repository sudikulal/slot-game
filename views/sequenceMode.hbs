<html>

<head>
    <meta charset="UTF-8">
    <title>Slot Machine!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style>
        * {
            font-family: monospace;
        }

        body {
            margin: 10px;
        }

        .slot-number {
            font-size: 100px;
        }

        .center {
            text-align: center;
        }

        .lever {
            margin-top: 5px;
        }

        table.center {
            margin-left: auto;
            margin-right: auto;
        }
        a:hover {
      color: black;
      text-decoration:
        none;
    }
    #play{
        margin-top: 10%;
    }
    </style>
</head>

<body class="jumbotron jumbotron-fluid">
    <div >
        <div class="container">
            <h1 class="display-4">Play Slot!</h1>
            <p class="lead">
                Sequence Mode
            </p>
            <hr class="my-4">
            <p>
                Hit Play button to start
            </p>
            <p>coins:{{coins}}</p>
            <a href="/user/mainPage">mainPage</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
             <div class="center lever">
        <form method="POST" action="/user/sequenceMode" >
        <button type="submit" class="btn btn-primary" id="play">Play</button>
        </form>
    </div>
    <table class="center">
        <tbody>
            <tr>
                <td>
                    <h1>{{numOne}}</h1>
                </td>
                <td>
                    <h1>{{numTwo}}</h1>
                </td>
                <td>
                    <h1>{{numThree}}</h1>
                </td>
                
            </tr>
        </tbody>       
    </table>
<h3 class="center" >{{msg}}</h3>
    
        </div>
        <div class="col">
             <table class="center">
        {{#each sequence}}
        <tbody>
            <tr>
                <td><h3>{{this.first_num}}</h3></td>
                <td><h3>{{this.second_num}}</h3></td>
                <td><h3>{{this.third_num}}</h3></td>
                </tr>
        </tbody>
        {{/each}}
    </table>
        </div>
    </div>
  
</body>

</html>