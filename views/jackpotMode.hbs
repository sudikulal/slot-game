<html>

<head>
    <title>Slot Machine!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" />
    <style>
        * {
            font-family: monospace;
        }

        body {
            margin: 10px;
        }

        .slot-number {
            font-size: 100px;
        }

        .center {
            text-align: center;
        }

        .row {
            display: flex;
        }

        .lever {
            margin-top: 5px;
        }

        table.center1 {
            margin-left: 50%;
        }
       
        

        a:hover {
            color: black;
            text-decoration: none;
        }

        #guess {
            margin-top: 15%;
            width: 60%;
            text-align: center;
        }

        input {
            text-align: center;
        }

        #game {
            margin-top: 10%;
        }
        #id{

        }
    </style>
</head>

<body class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Play Slot!</h1>
        <p class="lead">
            Jackpot Mode
        </p>
        <hr class="my-4" />
        <p>
            Hit Play button to start
        </p>
        <p>coins:{{coins}}</p>
        <a href="/user/mainPage">mainPage</a>
    </div>
    <div class="container" id="game">
        <div class="row">

            <div class="col center">

                <form method="POST" action="/user/jackpotMode" autocomplete="off">
                    <div class="row">
                        <div class="col">
                            <div id="guess">
                                <label for="num" class="form-label">guess</label>
                                <input type="text" name="num" class="form-control" pattern="[0-9]{3}" required placeholder="---"
                                    value={{num}}>
                                    <button type="submit" class="btn btn-primary my-5" id="play">Play</button>
                            </div>
                        </div>

                        
                        <div class="col">
                            <div id="bet">
                                
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h5 class="card-title">Bet Money</h5>
                                        <p class="card-text">bet an amount on number get double coins </p>
                                        <label for="bet" class="form-label">bet</label>
                                <input type="text" name="bet" class="form-control">
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>


                    
                </form>

                <h3>{{msg}}</h3>
            </div>



            <div class="col">
                <table class="center1">
                    <tbody>
                        <tr>
                            <td>
                                <h2>{{n1}}</h2>
                                <h2>{{n2}}</h2>
                                <h2>{{n3}}</h2>
                                <h2>{{n4}}</h2>
                                <h2>{{n5}}</h2>

                            </td>

                        </tr>
                    </tbody>
                </table>

            </div>

            <div class="col">
                <table class="center2">
                    <tbody>
                        <tr>
                            <td>
                                <h2>{{n6}}</h2>
                                <h2>{{n7}}</h2>
                                <h2>{{n8}}</h2>
                                <h2>{{n9}}</h2>
                                <h2>{{n10}}</h2>

                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>