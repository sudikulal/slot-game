<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous" />
    <style>
    .form-control{
      width: 40%;
    } 

    .form-popup {
  display: none;
}
   </style>
    <title>Document</title>
  </head>
  <body>
    <div class="container my-2">
        
      <form method="POST" action="/admin/setSequence" >
      <label for="sequence_id" class="form-label" class="form-control my-3">sequence_id</label>
        <input type="text" name="sequence_id" id="sequence_id" class="form-control"  value="{{sequence_id}}"> 
        <label for="sequence" class="form-label" class="form-control my-3">sequence</label>
        <input type="text" name="sequence" id="sequence" class="form-control"  value="{{first_num}}{{second_num}}{{third_num}}"> 
        <button class="btn btn-primary my-2" type="submit">update</button>
      </form>


      <button class="btn btn-primary my-2" onclick="openForm()">create sequence</button>

<div class="form-popup" id="myForm">
  <form method="post" action="/admin/createSequence" class="form-container">

    <label for="sequence" class="form-label">new sequence</label>
    <input type="text" name="sequence" id="sequence" class="form-control" placeholder="000" required>

    <button class="btn btn-primary my-2" type="submit" >add sequence</button>
    <button type="button" class="btn btn-primary my-2" onclick="closeForm()">Close</button>
  </form>
</div>

<script>
function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}
</script>
    </div>
  </body>
</html>