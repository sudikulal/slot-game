<style>
  table{
    margin-left: auto;
    margin-right: auto;
  }
  table {
                border-collapse: collapse;
            }
            th {
                background-color:rgb(9, 26, 255);
                Color:white;
            }
            th, td {
                width:300px;
                text-align:center;
                border:1px solid black;
                padding:5px 10px
              
            }
 
</style>
<body>
{{!-- 
   <button class="btn btn-primary" --onclick="openForm()" >invite friends</button></form>  --}}
<div class="form-popup" id="myForm">
  <table class="my-5">
  <tr>
    <th><h1>id</h1></th>
    <th><h1>Name</h1></th>
    <th><h1>email</h1></th>
    <th><h1>invite</h1></th>
  </tr>
  {{#each result}}
  <tr>
    <td><h4>{{this.user_id}}</h4></td>
    <td><h4>{{this.name}}</h4></td>
    <td><h4>{{this.email_id}}</h4></td>
    <td>{{#if this.status}}
      <p>online</p>
      {{else}}
      {{#if this.invite}}
      <form method="post" action="/cancel/{{this.user_id}}" >
      <button class="btn btn-primary" type="submit" >cancel</button></form>
      {{else}}
      <form method="post" action="/invite/{{this.user_id}}" >
      <button class="btn btn-primary" type="submit" >invite</button></form>
      {{/if}}
      {{/if}}
      </td>
  </tr>
  {{/each}}
</table>
{{!-- <button type="button" class="btn cancel" onclick="closeForm()">Close</button> --}}
<form method="post" action="/customRoom/start">
<input type="hidden" name="room_id" value={{room}}>
<button class="btn btn-primary" type="submit" style="margin-left: 50%;">start game</button></form>
</div>

<a href="/user/mainPage" style="position:relative;left:15px">goback to mainPage</a>

