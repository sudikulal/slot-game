<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
     table {
                border-collapse: collapse;
            }
            th, td {
                width:150px;
                text-align:center;
                border:1px solid black;
                padding:5px
              
            }
</style>
<body>
    <table>
  <tr>
      <th><h1>user_id</h1></th>
      <th><h1>Name</h1></th>
    <th><h1>email_id</h1></th>
    <th><h1>phone</h1></th>
    <th><h1>gender</h1></th>
    <th><h1>coins</h1></th>
    <th><h1>Admin</h1></th>
    <th><h1>block</h1></th>
    <th><h1>update</h1></th>
  </tr>
  {{#each result}}
  <tr>
    <td><h4>{{this.user_id}}</h4></td>
    <td><h4>{{this.name}}</h4></td>
    <td><h4>{{this.email_id}}</h4></td>
    <td><h4>{{this.phone}}</h4></td>
    <td><h4>{{this.gender}}</h4></td>
    <td><h4>{{this.coins}}</h4></td>
    <td><h4>{{this.admin}}</h4></td>
    {{#if this.admin}}
    <td></td>
    {{else}}
    <td>{{#if this.block}}
      <form method="post" action="/admin/blockUnblock/{{this.user_id}}" >
      <button class="btn btn-primary" type="submit">unblock</button></form>
      {{else}}
      <form method="post" action="/admin/blockUnblock/{{this.user_id}}" >
      <button class="btn btn-primary" type="submit">block</button></form>
      {{/if}}
    </td>
    {{/if}}
    <td><form method="get" action="/admin/updateUserDetail/{{this.user_id}}" >
             <div class="d-grid gap-3">
                 <button class="btn btn-primary" type="submit">update Details</button>
             </div>
             </form></td>  
  </tr>
  {{/each}}
</table>
<a href="/user/mainPage" style="position:relative;left:15px">goback to mainPage</a>

</body>
</html>